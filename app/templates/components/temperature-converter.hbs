<div class='list-group'>
  <form class='form-inline' {{action 'convertTemperature' on='submit'}}>
    <div class='form-group'>
      {{input type='text' class='form-control' id='celsius-temp' placeholder='Celsius' value=celsius}}
    </div>
    <div class='form-group'>
      {{input type='text' class='form-control' id='fahrenheit-temp' placeholder='Fahrenheit' value=fahrenheit}}
    </div>
    <button type='submit' class='btn btn-primary'>Convert</button>
  </form>
</div>
